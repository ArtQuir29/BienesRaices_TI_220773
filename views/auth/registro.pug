extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-violetCustom Bienes 
            span.font-normal.text-lightBlue Raíces  
        h2.text-center.text-2xl.font-extrabold.text-violetCustom= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-pastelYellow.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-softWhite.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken) 
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-lightBlue.rounded-md.placeholder-lightBlue(placeholder="Escribe tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-lightBlue.rounded-md.placeholder-lightBlue(placeholder="Escribe tu email" type="email" name="email" value= usuario ? usuario.email : '' ) 
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-lightBlue.rounded-md.placeholder-lightBlue(placeholder="Escribe tu password" type="password" name="password")        
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="repetir_password") Repetir password
                        input#repetir_password.w-full.px-3.py-2.border.border-lightBlue.rounded-md.placeholder-lightBlue(placeholder="Repite tu password" type="password" name="repetir_password")         
                    
                    div.flex.items-center.justify-between 
                        a.text-gray-600.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-600.text-xs(href="/auth/olvide-password") Olvide mi Password 

                    input(class="w-full bg-violetCustom hover:bg-lightBlue text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")