extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-violetCustom Bienes 
            span.font-normal.text-lightBlue Ra√≠ces  
        h2.text-center.text-2xl.font-extrabold.text-violetCustom= pagina

        div(class="bg-softWhite shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
